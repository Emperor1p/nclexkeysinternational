{
  "buildCommand": "cd frontend && npm run build",
  "outputDirectory": "frontend/.next", 
  "framework": "nextjs",
  "installCommand": "cd frontend && npm install",
  "devCommand": "cd frontend && npm run dev",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_API_BASE_URL": "http://ec2-34-206-167-168.compute-1.amazonaws.com:8000"
  },
  "build": {
    "env": {
      "NEXT_PUBLIC_API_BASE_URL": "http://ec2-34-206-167-168.compute-1.amazonaws.com:8000"
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        }
      ]
    }
  ]
}
